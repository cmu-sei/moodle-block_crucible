{{!
    @template block_crucible/landing

    This template renders the cards view for the crucible block.

    Example context (json):
    {
        "player": "https://player.example.com",
        "blueprint": "https://blueprint.example.com"
    }
}}

<h5>Hello {{username}}! Welcome to the Crucible Application Dashboard. </h5> <br>

<div class="applications-grid">
    {{#player}}
        <div class="application-block" id="player">
        <div class="application-details">
            <div class="application-title">Player</div>
            <div class="application-description">{{playerDescription}}</div>
        </div>
        <div class="application-link">
            <a href="{{player}}">
                <img class="application-image" src="{{playerLogo}}" alt="Player">
            </a>
        </div>
        </div>
    {{/player}}

    {{#blueprint}}
        <div class="application-block" id="blueprint">
        <div class="application-details">
            <div class="application-title">Blueprint</div>
            <div class="application-description">{{blueprintDescription}}</div>
        </div>
        <div class="application-link">
            <a href="{{blueprint}}">
                <img class="application-image" src="{{blueprintLogo}}" alt="Blueprint">
            </a>
        </div>
        </div>
    {{/blueprint}}

    {{#cite}}
        <div class="application-block" id="cite">
        <div class="application-details">
            <div class="application-title">CITE</div>
            <div class="application-description">{{citeDescription}}</div>
        </div>
        <div class="application-link">
            <a href = "{{cite}}">
                <img class="application-image" src="{{citeLogo}}" alt="Cite">
            </a>
        </div>
        </div>
    {{/cite}}

    {{#gallery}}
        <div class="application-block" id="gallery">
        <div class="application-details">
            <div class="application-title">Gallery</div>
            <div class="application-description">{{galleryDescription}}</div>
        </div>
        <div class="application-link">
            <a href = "{{gallery}}">
                <img class="application-image" src="{{galleryLogo}}" alt="Gallery">
            </a>
        </div>
        </div>
    {{/gallery}}

    {{#roundcube}}
        <div class="application-block" id="roundcube">
        <div class="application-details">
            <div class="application-title">Roundcube</div>
            <div class="application-description">{{roundcubeDescription}}</div>
        </div>
        <div class="application-link">
            <a href = "{{roundcube}}">
                <img class="application-image" src="{{roundcubeLogo}}" alt="Roundcube">
            </a>
        </div>
        </div>
    {{/roundcube}}

    {{#rocket}}
        <div class="application-block" id="rocket">
        <div class="application-details">
            <div class="application-title">Rocket.Chat</div>
            <div class="application-description">{{rocketDescription}}</div>
        </div>
        <div class="application-link">
            <a href = "{{rocket}}">
                <img class="application-image" src="{{rocketLogo}}" alt="RocketChat">
            </a>
        </div>
        </div>
    {{/rocket}}

    {{#steamfitter}}
        <div class="application-block" id="steamfitter">
        <div class="application-details">
            <div class="application-title">Steamfitter</div>
            <div class="application-description">{{steamfitterDescription}}</div>
        </div>
        <div class="application-link">
            <a href = "{{steamfitter}}">
                <img class="application-image" src="{{steamfitterLogo}}" alt="Steamfitter">
            </a>
        </div>
        </div>
    {{/steamfitter}}
</div>
